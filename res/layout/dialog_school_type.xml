<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@id/ll_b"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.maxplus.sostudy.tools.FlowRadioGroup
            android:id="@+id/rg_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/xiaoxue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 小  学 "
                android:textColor="@color/gray" />


            <RadioButton
                android:id="@+id/chuzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 初  中 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/gaozhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 高  中 "
                android:textColor="@color/gray" />
        </com.maxplus.sostudy.tools.FlowRadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sub_negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/sub_positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reg_teacher"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
