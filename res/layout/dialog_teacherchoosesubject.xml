<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@id/ll_b"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.maxplus.sostudy.tools.FlowRadioGroup
            android:id="@+id/rg_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 语  文 "

                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=" 数  学 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 英  语 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 物  理 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 化  学 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_3"
                android:layout_toRightOf="@id/rb_5"
                android:text=" 生  物 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_4"
                android:text=" 历  史 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_5"
                android:layout_toRightOf="@id/rb_7"
                android:text=" 地  理 "
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/rb_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_6"
                android:layout_toRightOf="@id/rb_8"
                android:text=" 政  治 "
                android:textColor="@color/gray" />
        </com.maxplus.sostudy.tools.FlowRadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sub_negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/sub_positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reg_teacher"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
