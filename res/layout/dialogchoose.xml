<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_g"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.maxplus.sostudy.tools.FlowRadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ck_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="九年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十一年级"
                android:textColor="@color/gray" />

            <RadioButton
                android:id="@+id/ck_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十二年级"
                android:textColor="@color/gray" />


        </com.maxplus.sostudy.tools.FlowRadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_g"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reg_teacher"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
